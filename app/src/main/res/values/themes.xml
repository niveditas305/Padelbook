<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Padelbook" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_blue</item>
        <item name="colorPrimaryVariant">@color/theme_blue</item>
        <item name="colorOnPrimary">@color/theme_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="pinViewStyle">@style/PinWidget.PinView</item>
        <item name="android:colorAccent">@color/theme_blue</item>

        <!-- Status bar color. -->
      <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


     <style name="EditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/theme_blue</item>
         <item name="singleLine">true</item>
        <item name="hintEnabled">true</item>
     </style>

    <style name="radioButtoStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/med</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:textColor">@color/theme_blue</item>
        <item name="android:button">@drawable/rb_selector</item>
         <item name="android:textSize">@dimen/_10ssp</item>
    </style>
 <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/med</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:textColor">@color/theme_blue</item>
        <item name="android:button">@drawable/cb_selector</item>
         <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="tvBold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/theme_blue</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="tvReg" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/reg</item>
        <item name="android:textColor">@color/theme_blue</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>
    <style name="tvRegg" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/reg</item>
        <item name="android:textColor">@color/theme_blue</item>
        <item name="android:textSize">@dimen/_22sdp</item>
    </style>

    <style name="tvLight" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textColor">@color/theme_blue</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>


    <style name="AppTheme.InputLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/med</item>
        <item name="android:textColor">@color/theme_blue</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:colorControlNormal">@color/text_hint_color</item>
        <item name="android:colorControlActivated">@color/theme_blue</item>
        <item name="colorAccent">@color/theme_blue</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
         <item name="android:background">@drawable/round_corner_bg</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
         <item name="android:elevation">@dimen/_2sdp</item>
         <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:fontFamily">@font/med</item>
    </style>

    <style name="buttonStyleTwo" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
         <item name="android:elevation">@dimen/_2sdp</item>
         <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:fontFamily">@font/med</item>
    </style>

    <style name="customButton" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/med</item>
    </style>

    <style name="regTextview" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/med</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="etCustom" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@android:color/transparent</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="background">@drawable/roundcorner</item>
    </style>

    <style name="AppThemeRatingBar" parent="Theme.AppCompat">
        <item name="colorAccent">#676767</item>
        <item name="android:colorControlNormal">#f9a825</item>
    </style>

    <style name="CustomTabTwo" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="textAllCaps">false</item>
        <item name="fontWeight">900</item>
        <item name="singleLine">true</item>
        <item name="fontFamily">@font/med</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/theme_blue</item>
        <item name="android:textSize">@dimen/_10ssp</item>

    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@android:color/white</item>
        <item name ="android:background">@android:color/white</item>
       <!-- <item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="DialogAnimation" parent="BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="TransparentProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DialogThemeDatePicker" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/theme_blue</item>
    </style>
</resources>