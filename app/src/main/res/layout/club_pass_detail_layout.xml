<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:paddingVertical="@dimen/_12sdp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circularImg"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/pass_details"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBookings"
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/bookings_per_week"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvTotalBookings"
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />
        <TextView
            android:id="@+id/tvRemainingBookings"
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvExpiryDate"
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />


        <TextView
            android:id="@+id/tvPriceDetails"
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />


        <TextView
            android:id="@+id/tvMatchDuration"
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

        <TextView
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/fore_more_information_please_contact"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvClubName"
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvGotIt"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/round_corner_blue"
            android:text="@string/got_it"
            app:layout_constraintTop_toBottomOf="@+id/checkedSec" />


    </LinearLayout>


</androidx.cardview.widget.CardView>