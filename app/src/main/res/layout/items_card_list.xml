<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/rowBG"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/separtorTwoId"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/remove"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:background="@color/dark_red_color"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_12sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="8dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/reg"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Remove"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/dark_red_color"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_12sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Remove"
                        android:fontFamily="@font/reg"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/dark_red_color"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_12sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Remove"
                        android:fontFamily="@font/reg"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    <RelativeLayout
        android:id="@+id/rowFG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true">

        <ImageView
            android:id="@+id/imgDp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_card_type" />

        <View
            android:id="@+id/ClickableView"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp"
            android:paddingTop="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvName"
            style="@style/tvBold"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imgDp"
            android:text="1234 5678 8907 3456"
            android:textColor="@color/theme_blue"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

    <View
            android:id="@+id/separtorTwoId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:clickable="false"
            android:layout_below="@+id/rowFG"
            android:background="@color/light_sep"/>


</RelativeLayout>